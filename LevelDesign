package com.example.workingwitheverything;

import java.util.ArrayList;
import java.util.List;

import android.content.Context;
import android.widget.RelativeLayout;

public class LevelDesign {
	
	private BallSprite bsPlayer;
	private List<Object_Wall> owLevel;
	
	public LevelDesign(int levelNumber, RelativeLayout rLayout, Context context, BallSprite bsPlayerTemp, List<Object_Wall> owLevelTemp) {
		
		switch (levelNumber) {
		case 0:
			
			bsPlayer = new BallSprite(rLayout, context, 50, 50, 10);
			
			owLevel.add(new Object_Wall(100, 100, 100, 100, rLayout, context));
			owLevel.add(new Object_Wall(300, 100, 100, 100, rLayout, context));
			
			break;
		case 1:
			
			break;
		}
		
		bsPlayer = bsPlayerTemp;
		/*
		 * TODO
		 * ARRAY PASS?
		 * 
		 */
		owLevel = owLevelTemp;
	}
	
	public BallSprite getBallSprite() {
		return bsPlayer;
	}
	
	public List<Object_Wall> getLevel() {
		return owLevel;
	}
}
